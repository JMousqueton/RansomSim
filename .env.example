# RansomSim Configuration Template
# Copy this file to .env and customize the values

# Web server port (default: 5001)
PORT=5001

# Flask environment (development/production)
FLASK_ENV=development

# Flask debug mode (True/False)
FLASK_DEBUG=True

# Database
DATABASE_URL=sqlite:///ransomsim.db

# File upload settings
MAX_UPLOAD_SIZE=16777216

# Admin password for protected operations
ADMIN_PASSWORD=changeme

# Flask secret key for session management (generate a secure random key!)
SECRET_KEY=change-this-to-a-random-secret-key

# Chat auto-responder delay settings in seconds (how long before the gang replies)
CHAT_REPLY_DELAY_MIN=2
CHAT_REPLY_DELAY_MAX=10